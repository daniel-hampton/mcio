{
  "name": "mcio",
  "version": "1.0.0",
  "description": "ModernCoder.io website",
  "main": "index.js",
  "author": "Daniel Hampton",
  "private": true,
  "scripts": {
    "_purge_tailwindcss": "purgecss --config ./purgecss.config.js -o ./src/.vuepress/styles/",
    "tailwindDev": "echo {\"buildMode\": false} > ./src/.vuepress/styles/stylusSettings.json" ,
    "tailwindProd": "echo {\"buildMode\": true} > ./src/.vuepress/styles/stylusSettings.json" ,
    "dev": "npm run tailwindDev && vuepress dev src",
    "build": "npm run tailwindProd && npm run _purge_tailwindcss && vuepress build src"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@vuepress/plugin-back-to-top": "^1.3.1",
    "autoprefixer": "^9.7.4",
    "purgecss": "^2.1.0",
    "tailwindcss": "^1.2.0",
    "vuepress": "^1.3.0",
    "vuepress-plugin-mathjax": "^1.2.8"
  },
  "dependencies": {
    "firebase": "^7.8.0",
    "lorem-ipsum": "^2.0.3",
    "vuepress-plugin-clean-urls": "^1.1.1",
    "vuepress-plugin-medium-zoom": "^1.1.8"
  }
}
