@import "palette.styl"

div[class*=language-python] {
  border-left: 6px solid;
  border-color: $accentColor;
}

.row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  //margin-right: -15px;
  //margin-left: -15px;
  margin-bottom: 15px;
}

.col, .col-3, .col-9, .col-auto {
  position: relative;
  width: 100%;
  padding-right: 15px;
  padding-left: 15px;
  box-sizing: border-box;
}

.col {
  flex-direction: column;
  flex: 1 1 0;
  max-width: 100%;
}

.col-auto {
  flex: 0 0 auto;
  width: auto;
  max-width: 100%;
}

.col-3 {
  flex: 0 0 25%;
  max-width: 25%;
}

.col-6 {
  flex: 0 0 50%;
  max-width: 50%;
}

.col-8 {
  flex: 0 0 66.666667%;
  max-width: 66.666667%;
}

.col-9 {
  flex: 0 0 75%;
  max-width: 75%;
}

@media (min-width: $MQMobile) {
  .col-sm {
    flex: 1 1 0;
    max-width: 100%;
  }

  .col-sm-3 {
    flex: 0 0 25%;
    max-width: 25%;
  }

  .col-sm-9 {
    flex: 0 0 75%;
    max-width: 75%;
  }


  .col-sm-12 {
    flex: 0 0 100%;
    max-width: 100%;
  }
}

button
  font-size 14px
  background-color $accentColor
  color white
  font-weight bold
  padding 0.5rem 1.6rem
  border-radius 4px
  border-width 0
  transition-property: background-color;
  transition-timing-function ease
  transition-duration: 0.1s;
  transition-delay: 0s;

button:hover
  background-color lighten($accentColor, 10%)
  cursor pointer


